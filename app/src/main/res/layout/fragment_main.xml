<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.systemallica.valenbisi.fragments.MapsFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLanesToggle"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mapbutton_background"
        android:paddingEnd="9dp"
        android:paddingStart="9dp"
        app:iconTint="@color/btn_icon"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btnStationsToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStationsToggle"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mapbutton_background"
        android:paddingEnd="9dp"
        android:paddingStart="9dp"
        app:iconTint="@color/btn_icon"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btnOnFootToggle"
        app:layout_constraintStart_toEndOf="@id/btnLanesToggle"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOnFootToggle"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mapbutton_background"
        android:paddingEnd="9dp"
        android:paddingStart="9dp"
        app:iconTint="@color/btn_icon"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btnRefresh"
        app:layout_constraintStart_toEndOf="@id/btnStationsToggle"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRefresh"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mapbutton_background"
        android:paddingEnd="9dp"
        android:paddingStart="9dp"
        app:icon="@drawable/icon_reload"
        app:iconTint="@color/btn_icon"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btnParkingToggle"
        app:layout_constraintStart_toEndOf="@id/btnOnFootToggle"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnParkingToggle"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mapbutton_background"
        android:paddingEnd="9dp"
        android:paddingStart="9dp"
        app:iconTint="@color/btn_icon"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@id/btnRefresh"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>